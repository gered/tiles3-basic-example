			</dependency>
			<dependency>
				<groupId>ca.blarg</groupId>
				<artifactId>gdx-toolbox</artifactId>
				<version>${gdx-toolbox.version}</version>
			</dependency>
			<dependency>
				<groupId>ca.blarg</groupId>
				<artifactId>gdx-tilemap3d</artifactId>
				<version>${gdx-tilemap3d.version}</version>
